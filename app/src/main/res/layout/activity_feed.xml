<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_white">

    <!-- Header -->
    <com.example.konnect.ComponentHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headerText="Diogo Laurindo"
        app:showExitButton="true" />

    <!-- Scrollable Body -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/body_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Feed Section -->
            <LinearLayout
                android:id="@+id/feed_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/grau_min_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="Grau Mínimo"
                        android:contentDescription="Grau Mínimo"
                        android:textColor="@color/blue" />

                    <Button
                        android:id="@+id/grau_max_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="Grau Máximo"
                        android:contentDescription="Grau Máximo"
                        android:textColor="@color/blue" />
                </LinearLayout>

                <!--Search Bar-->
                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_search"
                    android:padding="16dp"
                    android:background="@drawable/rounded_border"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:inputType="text"/>

                <!--Create post-->
                <EditText
                    android:id="@+id/content_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_placeholder_post"
                    android:padding="16dp"
                    android:background="@drawable/rounded_border"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:inputType="text"/>

                <Button
                    android:id="@+id/post_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue"
                    android:text="Postar" />

                <!-- Post List -->
                <LinearLayout
                    android:id="@+id/feed_list_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/feed_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/users_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Groups Section -->
            <LinearLayout
                android:id="@+id/groups_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/groups_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grupos"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Notifications Section -->
            <LinearLayout
                android:id="@+id/notifications_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Notification Box 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginTop="0dp"
                    android:elevation="4dp"
                    android:background="@drawable/rounded_border">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Luiz Braga"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aceitar"
                            android:backgroundTint="@color/blue" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rejeitar"
                            android:backgroundTint="@color/blue"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Notification Box 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:elevation="4dp"
                    android:background="@drawable/rounded_border">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Matheus Vanzan"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aceitar"
                            android:backgroundTint="@color/blue" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rejeitar"
                            android:backgroundTint="@color/blue"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Notification Box 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:elevation="4dp"
                    android:background="@drawable/rounded_border">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rômulo Venâncio"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aceitar"
                            android:backgroundTint="@color/blue" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rejeitar"
                            android:backgroundTint="@color/blue"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Navbar/Footer -->
    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blue">

        <Button
            android:id="@+id/nav_feed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Feed"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:textStyle="normal" />

        <Button
            android:id="@+id/nav_groups"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Grupos"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:textStyle="normal" />

        <Button
            android:id="@+id/nav_notifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notificações"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:textStyle="normal" />
    </LinearLayout>
</LinearLayout>
